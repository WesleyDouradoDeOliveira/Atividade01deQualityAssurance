        } else {
            System.out.println("O número é zero.");
        }

        // Fecha o scanner
        scanner.close();
    }
}

(17) Escreva um programa que leia a idade de uma pessoa e exiba uma mensagem indicando se ela é criança, adolescente, adulto ou idoso.

package TesteDeSoftwareQA;

import java.util.Scanner;

public class Atividade {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Solicita a idade da pessoa
        System.out.print("Digite a idade da pessoa: ");
        int idade = scanner.nextInt();

        // Verifica a faixa etária
        if (idade < 0) {
            System.out.println("Idade inválida.");
        } else if (idade <= 12) {
            System.out.println("Criança.");
        } else if (idade <= 17) {
            System.out.println("Adolescente.");
        } else if (idade <= 59) {
            System.out.println("Adulto.");
        } else {
            System.out.println("Idoso.");
        }

        // Fecha o scanner
        scanner.close();
    }
}

